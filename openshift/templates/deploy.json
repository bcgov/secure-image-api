{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}-deployment-template",
    "annotations": {
      "description": "Deployment template for a nodejs server.",
      "tags": "node",
      "iconClass": "icon-node"
    }
  },
  "objects": [{
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        },
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [{
          "name": "8080-tcp",
          "port": 8080,
          "targetPort": 8080
        }],
        "selector": {
          "name": "${NAME}"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${ROUTE_NAME}",
        "labels": {
          "app": "${NAME}"
        }
      },
      "spec": {
        "port": {
          "targetPort": "8080-tcp"
        },
        "to": {
          "kind": "Service",
          "name": "${NAME}",
          "weight": 100
        }
      }
    },
    {
      "kind": "Secret",
      "type": "Opaque",
      "apiVersion": "v1",
      "metadata": {
        "name": "sso",
        "labels": {
          "app": "${NAME}"
        }
      },
      "stringData": {
        "ssoClientSecret": "${SSO_CLIENT_SECRET}"
      }
    },
    {
      "kind": "Secret",
      "type": "Opaque",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "labels": {
          "app": "${NAME}"
        }
      },
      "stringData": {
        "apiSessionSecret": "${API_SESSION_SECRET}"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling"
        },
        "triggers": [{
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_NAMESPACE}",
                "name": "${NAME}:${IMAGE_TAG}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${NAME}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}",
            "labels": {
              "name": "${NAME}"
            }
          },
          "spec": {
            "containers": [{
              "name": "${NAME}",
              "image": " ",
              "ports": [{
                "containerPort": 8080,
                "protocol": "TCP"
              }],
              "readinessProbe": {
                "timeoutSeconds": 3,
                "initialDelaySeconds": 3,
                "httpGet": {
                  "path": "/ehlo",
                  "port": 8080
                }
              },
              "livenessProbe": {
                "timeoutSeconds": 3,
                "initialDelaySeconds": 300,
                "httpGet": {
                  "path": "/ehlo",
                  "port": 8080
                }
              },
              "env": [{
                  "name": "MINIO_SERVICE",
                  "value": "${MINIO_SERVICE}"
                },
                {
                  "name": "MINIO_ACCESS_KEY",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "${NAME}",
                      "key": "minioAccessKey"
                    }
                  }
                },
                {
                  "name": "MINIO_SECRET_KEY",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "${NAME}",
                      "key": "minioSecretKey"
                    }
                  }
                },

                {
                  "name": "API_SESSION_SECRET",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "${NAME}",
                      "key": "ssoClientSecret"
                    }
                  }
                },
                {
                  "name": "SSO_CLIENT_SECRET",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "${NAME}",
                      "key": "ssoClientSecret"
                    }
                  }
                },

                {
                  "name": "PORT",
                  "value": "${PORT}"
                },
                {
                  "name": "NODE_ENV",
                  "value": "${NODE_ENV}"
                },

                {
                  "name": "APP_URL",
                  "value": "${APP_URL}"
                }
              ],
              "resources": {
                "limits": {
                  "memory": "${MEMORY_LIMIT}"
                }
              }
            }]
          }
        }
      }
    }
  ],
  "parameters": [{
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.  You should keep this as default unless your know what your doing.",
      "value": "secure-image-api",
      "required": true
    },
    {
      "name": "IMAGE_TAG",
      "displayName": "Output Image Tag",
      "description": "The tag given to the built image.",
      "value": "latest",
      "required": true
    },
    {
      "name": "IMAGE_NAMESPACE",
      "displayName": "Image Namespace",
      "description": "The namespace of the OpenShift project containing the imagestream for the application.",
      "value": "devex-mpf-secure-tools",
      "required": true
    },
    {
      "name": "MEMORY_LIMIT",
      "displayName": "Memory Limit",
      "description": "Maximum amount of memory the container can use.",
      "value": "512Mi",
      "required": true
    },
    {
      "name": "ROUTE_NAME",
      "displayName": "Application Route",
      "description": "The name of the default route use to access this service.",
      "value": "api",
      "required": true
    },
    {
      "name": "MINIO_SERVICE",
      "displayName": "Minio Service",
      "description": "The endpoint for the minio storage service.",
      "required": true
    },
    {
      "name": "PORT",
      "displayName": "Server Port",
      "description": "The perferd port for the server to listen on.",
      "value": "8080",
      "required": true
    },
    {
      "name": "NODE_ENV",
      "displayName": "Node Environment",
      "description": "The node environment. Typically: develop, test, stage, or production",
      "required": true
    },
    {
      "name": "APP_URL",
      "displayName": "Application URL",
      "description": "The fully qualified external URL to access this service.",
      "value": ""
    },
    {
      "name": "API_SESSION_SECRET",
      "displayName": "Express session secret",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}",
      "required": true
    },
    {
      "name": "SSO_CLIENT_SECRET",
      "displayName": "Express session secret",
      "required": true
    }
  ]
}
